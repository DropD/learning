RandomCountdown {
    background: $boost;
    height: 5;
    margin: 1;
    min-width: 50;
    padding: 1;
}

#status {
    text-align: center;
    min-width: 50;
    color: $foreground;
    height: 3;
}

#stop {
    display: none;
}

.running {
    background: $success-muted;
}

.running #start {
    display: none;
}

.running #stop {
    display: block;
}
